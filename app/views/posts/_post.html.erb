<section class="newsfeed-item clearfix">
<!--   <div class="pull-left clear-left dollar">
  $
  </div> -->
  <div>
    <div><%= auto_link(post.short_content) %></div>
    <div class="pull-right">
      <%= raw post.tags.map(&:name).map { |t| link_to t, tag_path(t), class:"label" }.join(' ') %>
    </div>
    <p class="text-right muted smaller">
      <%= time_ago_in_words(post.created_at) %> ago by <%= link_to "#{post.user.name}", user_path(post.user) %>
    </p>
  </div>
<%= render partial: 'comments/comment', collection: post.comments.where('content is not null'), as: :comment, locals: { post: post } %>
<%= render partial: 'comments/form', locals: { post: post } %>
</section>