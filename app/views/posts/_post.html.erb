<div class="media">
  <a class="pull-left" href="project.html">
    <%= image_tag post.img_url, class:"img-polaroid moc-pic" %>
  </a>
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to post_path(post) do %>
        <%= post.title %>
      <% end %>
    </h4>
    <h6 class="pull-left">Project Lead: <em><%= link_to "#{post.user.name}", user_path(post.user) %></em></h6>
    <div class="pull-right"><%= render partial: "shared/tags", locals: { tags: post.tags }  %></div>
    <div class="clear-both"><%= post.short_desc %> <%= link_to '(more)', post_path(post) %></div>
    <div class="muted">
        Impressions: <em><%= post.impressions_count %> State: <em><%= post.state %></em> Published: <em><%= post.nice_created_at_date %></em> Participants: <em>25</em> 
    </div>
  </div>
</div>