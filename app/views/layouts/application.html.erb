      ga('create', 'UA-43004889-1', 'bankmybiz.com');
      ga('send', 'pageview');

    </script>
  </head>
  <body>  
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=210271585800372";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
    <div class="container">
      <div class="navbar">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar collapsed" data-toggle="collapse" data-target=".navbar-responsive-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <%= link_to root_path, class:"brand" do %>
              <%= image_tag "logo.jpg" %>
            <% end %>
            <div class="nav-collapse navbar-responsive-collapse collapse" style="height: 0px;">
              <ul class="nav">
                <li>
                  <%= link_to 'How it Works', how_path, class:"little" %>
                  <% if params[:controller] == "welcome" && params[:action] == "how" %>
                    <div class="under text-center"><i class="icon-caret-up green"></i></div>
                  <% end %>
                </li>
                <li>
                  <%= link_to 'About Us', about_path, class:"little" %>
                  <% if params[:controller] == "welcome" && params[:action] == "about" %>
                    <div class="under text-center"><i class="icon-caret-up green"></i></div>
                  <% end %>
                </li>
                <li>
                  <%= link_to 'Blog', "http://blog.bankmybiz.com", class:"little", target:"_blank" %>
                </li>
              </ul>
              <% if user_signed_in? %>
                <% if false %>
                <%= form_tag root_path, :method => :get, class:"form-search" do %>
                  <div class="input-append">
                    <%= text_field_tag :search, params[:search], class:"span2 search-query", placeholder:"Buzz Search. . ." %>
                    <button class="btn btn-success" type="submit">
                      <i class="icon-search"></i>
                    </button>
                  </div>
                <% end %>
                <% end %>
                <ul class="nav pull-right">
                  <li>
                    <%= link_to "Buzz", root_path %>
                    <% if params[:controller] == "posts" && params[:action] == "index" %>
                      <div class="under text-center"><i class="icon-caret-up green"></i></div>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to "Matches", matches_path %>
                    <% if params[:controller] == "users" && params[:action] == "matches" %>
                      <div class="under text-center"><i class="icon-caret-up green"></i></div>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to "Messages", messages_path %>
                    <% if params[:controller] == "messages" && params[:action] == "index" %>
                      <div class="under text-center"><i class="icon-caret-up green"></i></div>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to "Activity", user_path(current_user) %>
                    <% if params[:controller] == "users" && params[:action] == "show" %>
                      <div class="under text-center"><i class="icon-caret-up green"></i></div>
                    <% end %>
                  </li>
                  <% if current_user.admin? %>
                    <li>
                      <%= link_to users_path do %>
                        <i class="icon-magic"></i>
                      <% end %>
                    </li>
                  <% end %>
                  <li class="divider-vertical"></li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle little" data-toggle="dropdown">
                      <%= current_user.karma %> <i class="icon-money"></i> - <%= current_user.first_name_with_last_initial %>
                      <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to edit_profile_path(current_user) do %>
                        <i class="icon-wrench"></i> Edit Profile
                          <% end %>
                      </li>
                      <li><%= link_to edit_user_registration_path do %>
                        <i class="icon-cog"></i> Settings
                          <% end %>
                      </li>
                      <li class="divider"></li>
                      <li><%= link_to destroy_user_session_path, method: "delete" do %>
                        <i class="icon-off"></i> Logout
                          <% end %>
                      </li>
                    </ul>
                  </li>
                </ul>
              <% else %>
                <ul class="nav pull-right">
                  <li>
                    <a href="/auth/linkedin" class="auth_provider btn btn-linkedin">
                      Login | <i class="icon-linkedin"></i>
                    </a>
                  </li>
                  <li class="email-signin">
                    <%= link_to new_session_path(resource_name) do %>
                      Login | <i class="icon-envelope"></i>
                    <% end %>
                  </li>
                </ul>
              <% end %>
              </div><!-- /.nav-collapse -->
            </div>
          </div> <!-- /navbar-inner -->
       </div> <!-- /navbar -->
        <%= bootstrap_flash %>
        <div class="row border-top">
          <%= yield %>
        </div>
      </div>

        <hr>
      <footer id="footer">
        <ul class="links">
          <li>
            &#169; 2013 BankMyBiz, LLC
          </li>
          <li>
            <a href="mailto:team@bankmybiz.com?subject=I have a question for BankmyBiz.com">Contact Us</a>
          </li>
          <li>
            <%= link_to "Terms & Conditions", terms_path %>
          </li>
          <li>
            <%= link_to "About us", about_path %>
          </li>
          <li>
            <%= link_to "Linkedin", "http://www.linkedin.com/company/bankmybiz-com", target:"_blank" %>
          </li>
          <li>
            <%= link_to "twitter", "https://www.twitter.com/bankmybiz", target:"_blank" %>
          </li>
          <li>
            <a href="https://plus.google.com/111339007136871525117" rel="publisher" target="_blank">Google+</a>
          </li>
          <li>
            <%= link_to "facebook", "https://www.facebook.com/pages/Bankmybiz/451357408284592", target:"_blank" %>
          </li>
        </ul>
      </footer>
      </div> <!-- /container -->
    </div>
  </div>
    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
    
  </body>
</html>
