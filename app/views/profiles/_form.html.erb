<%= form_for @profile do |f| %>
  <h5>Organization Profile</h5>

  <div><%= f.label :name, "#{current_user.bank? ? 'Bank' : 'Business'} Name" %>
  <%= f.text_field :name %></div>

  <div><%= f.label :email, "Contact Email" %>
  <%= f.email_field :email %></div>

  <div><%= f.label :phone, "Contact Phone" %>
  <%= f.text_field :phone %></div>

  <div><%= f.label :city %>
  <%= f.text_field :city %></div>

  <div><%= f.label :state %>
  <%= f.select :state, us_states, class:"state" %></div>

  <h5><%= current_user.bank? ? "Bank " : "Biz " %>Profile</h5>

  <% if current_user.bank? %>
    <div><%= f.label :bank_type %>
    <%= f.select :bank_type, bank_type, class:"" %></div>
  <% else %>
    <div><%= f.label :business_type %>
    <%= f.select :business_type, business_type, class:"" %></div>
  <% end %>

  <div><%= f.label :industries %>
  <%= f.select :industries, industries, class:"" %></div>

  <% unless current_user.bank? %>
    <div><%= f.label :years_old, "Years of Operation" %>
    <%= f.select :years_old, years_of_operation, class:"" %></div>

    <div><%= f.label :size_cash, "Revenue" %>
    <%= f.select :size_cash, size_cash, class:"" %></div>

    <div><%= f.label :size_employees, "Number of Employees" %>
    <%= f.select :size_employees, size_employees, class:"" %></div>

    <div><%= f.label :existing_loans, "Have Existing Business Loans?" %>
    <%= f.check_box :existing_loans, class:"" %></div>

    <div><%= f.label :owners_count, "Number of Owners (over 15% ownership in the company)" %>
    <%= f.select :owners_count, 1..100, class:"" %></div>
  <% end %>

  <div><%= f.label :bio, "What Makes Your #{current_user.bank? ? 'Bank' : 'Business'} Great?" %>
  <%= f.text_area :bio %></div>

  <%= f.submit "Update", class:"btn" %>
<% end %>