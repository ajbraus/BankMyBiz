<li class="comment">
  <div class="pull-left small">
    
  </div>        
  <% if false %>
    <%= image_tag 'default_profile_pic.png', class:"comment-pic" %>
  <% end %>
  <div class="small"><%= comment.content %></div>
  <div class="muted smallest text-right"><%= time_ago_in_words(comment.created_at) %> ago by <%= link_to "#{comment.user.name}", user_path(post.user) if comment.commentable.user %></div>
</li>