  <div id="contact-modal" class="modal hide fade in" style="display: none; ">  
    <%= form_for @user.messages.new, remote:true do |f| %>
      <div class="modal-header">  
        <a class="close" data-dismiss="modal">Ã—</a>  
        <h3>Contact <%= @user.name %></h3>  
      </div>  
      <div class="modal-body">  
        <div class=" message-subject">
          <%= f.text_field :subject , :placeholder => "Subject",  :class => "span5 message-subject-input"%>
        </div>
        <div class=" message-body ">
          <%= f.text_area :body , :placeholder => "Type your message here...", :rows => "8", :class => "span5 message-subject-input"%>
        </div>               
        <%= f.hidden_field :sender_id, value: "#{current_user.id}" %>
        <%= f.hidden_field :receiver_id, value: "#{@user.id}" %>
      </div>  
      <div class="modal-footer">  
        <%= f.submit "Send Private Message", :class => "btn btn-primary" %>
        <a href="#" class="btn" data-dismiss="modal">Cancel</a>  
      </div>  
    </div>
  <% end %>

<div class="span4">
  <% if user_signed_in? %>
    <%= render 'follow_form' %>
  <% end %>
   <p class='text-center'><%= large_profile_picture(@user) %></p>
  <ul>
  <li>
    <p><strong>Name</strong> <%= @user.name %></p>
  </li>
  <li><p><strong>Bucks</strong> <span class="muted"> <%= @user.karma %></span></p></li>
  <li>
    <strong>Bio</strong>
    <p class="muted"><%= @user.bio %></p>
  </li>
  <li>
    <strong class=''>Business Type:</strong>
    <p class="muted"><%= @user.business_types.map(&:description).join(", ") %></p>
  </li>
  <li>
    <strong class=''>Revenue Size:</strong>
    <p class="muted"><%= @user.revenue_sizes.map(&:description).join(", ") %></p>
  </li>
  <li>
    <strong class=''>Years of Operation</strong>
    <p class="muted"><%= @user.ages.map(&:description).join(", ") %></p>
  </li>
  <li>
    <strong class=''>Industry</strong>
    <p class="muted"><%= @user.industries.map(&:description).join(", ") %></p>
  </li>
  <li>
    <strong class=''>Employees</strong>
    <p class="muted"><%= @user.employee_sizes.map(&:description).join(", ") %></p>
  </li>
</ul>
  <% if @user == current_user %>
    <%= link_to "edit profile", edit_profile_path(@user) %>
  <% elsif current_user.messages_left? %>
    <p class='text-center'>
      <a data-toggle="modal" href="#contact-modal" class="btn btn-primary"><i class="icon-lock"></i> Message <%= @user.first_name_with_last_initial %></a>
    </p>
  <% end %>
</div>
<div class="span5">
  <% if @user == current_user %>
    <h4>Your Activity</h4>
    <% @activities.each do |activity| %>
      <div class="activity">
      <%= link_to activity.owner.name, activity.owner if activity.owner %>
      <%= render_activity activity %>
      </div>
    <% end %>
    <%= will_paginate @activities, renderer: BootstrapPagination::Rails %>
    <hr>  
  <% end %>
  <% if @user == current_user %>
    <h4>Your Posts</h4>
  <% else %>
    <h4><%= @user.first_name %>'s Recent Posts</h4>
  <% end %>
  <%= render partial: "posts/post", collection: @posts, as: :post %>
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>

<div class='span3'>
  <%= render 'shared/improve_profile' %>
