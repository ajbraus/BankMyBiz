<div class="center">
  <h2>Register</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.label :name, "Full Name* (private)" %>
    <%= f.text_field :name %></div>

    <div><%= f.label :email, "Email* (private)" %>
    <%= f.email_field :email %></div>

    <div><%= f.label :org_name, "Organization* (private)" %>
    <%= f.text_field :org_name %></div>

    <div><%= f.label :position, "Position*" %>
    <%= f.text_field :position %></div>

    <div><%= f.label :password, "Password* (min 6 characters)" %>
    <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation, "Confirm Password*" %>
    <%= f.password_field :password_confirmation %></div>

    <div><%= f.submit "Register", class:"btn btn-success btn-large" %></div>
  <% end %>

  <p>
    <a href="/auth/linkedin" class="auth_provider btn btn-large btn-block btn-linkedin">
      <i class="icon-linkedin"></i> | Register
    </a>
  </p>

  <%= render "devise/shared/links" %>

</div>