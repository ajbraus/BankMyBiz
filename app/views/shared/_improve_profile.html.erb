<section class="well">
<% if user_signed_in? %>
  <% if current_user.bank == nil %>    
    <h4>Banker or Biz Owner?</h4>
    <%= link_to "Funder", set_bank_path(current_user), class:"btn btn-success btn-lg" %>
    <%= link_to "Business", set_business_path(current_user), class:"btn btn-warning btn-lg" %>
    <p class="muted">Answer to unlock matches,<br> and be matched</p>
  <% else %>
    <% if !current_user.finished_profile? %>
      <h4>Complete Your Profile</h4>
        <%= link_to "#{current_user.profile_elements_left} questions to go", edit_profile_path(current_user) %>
        <div class="progress progress-striped active">
          <div class="progress-bar progress-bar-success" style="width: <%= current_user.profile_progress_percent %>%;">
            <%= link_to "#{current_user.profile_progress_percent}%", edit_profile_path(current_user), class:"no-link progress-percent" %>
          </div>
        </div>
        <h4 class="text-center">to Unlock <%= current_user.bank? ? "Owner" : "Funder" %> Matches</h4>
      </br>
    <% elsif current_user.todays_match.present? %>
      <h4><%= current_user.bank? ? "Owner" : "Funder" %> Match</h4>
      <%= render partial: "users/user", locals: { user: current_user.todays_match } %>
      <% unless current_user.finished_profile? %>
        <section>
          <%= link_to "#{current_user.started_profile? ? 'Improve Profile' : 'Build Profile'}", edit_profile_path(current_user), class:"btn btn-primary" %>
          <div class=''>For Better Matches</div>
        <% end %>
        <% if false %>
          <div class="hr-line"></div>
          <p class="muted"><%= current_user.bank? ? "Funders" : "Owners" %> Like You</p>
          <%= render partial: "users/user", collection: current_user.todays_peers, as: :user %>
        </section>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  The <strong>Bankmybiz Network</strong> can answer your business questions and match you with local and national sources of capital. <%= link_to "Sign up", new_user_registration_path %> and complete your profile to start receiving matches.
<% end %>
</section>