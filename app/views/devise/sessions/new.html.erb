<div class="col-sm-4 col-sm-offset-4 well">
  <h2 class='text-center'>Login</h2>
  <section>
    <p>
      <a href="/auth/linkedin" class="auth_provider btn btn-lg btn-block btn-linkedin">
        Login w/ Linkedin | <i class="icon ion-social-linkedin"></i>
      </a>
    </p>
    <center class='text-muted'> - or - </center>
  </section>
  <div class="hr-line"></div>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <p><%= f.label :email %>
    <%= f.email_field :email, :autofocus => true, class:"form-control" %></p>

    <p><%= f.label :password %>
    <%= f.password_field :password, class:"form-control" %></p>

    <% if devise_mapping.rememberable? -%>
      <div>
        <label>
          <%= f.check_box :remember_me, checked: true %>
          Remember Me
        </label>
      </div>
    <% end -%>

    <section class='text-right'><%= f.submit "Login", class:"btn btn-success btn-lg" %></section>
  <% end %>

  <%= render "devise/shared/links" %>
</div>