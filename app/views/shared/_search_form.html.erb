<div class="row">
  <div class="col-xs-12">
    <%= form_tag posts_path, :method => :get do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], class:"form-control", placeholder:"Search News Feed . . . ", :autofocus => true %>
        <span class="input-group-btn" type="submit">
          <button class="btn btn-success" type="button"> <i class="icon ion-search large"></i></button>
          <%= link_to "New Question", new_post_path, class:"btn btn-success" %>
        </span>
      </div>
    <% end %>
  </div>
</div>
<hr>