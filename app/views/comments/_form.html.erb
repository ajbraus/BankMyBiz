<div class="comment-show">
  <div class="pull-left small muted" rel="tooltip" data-placement="left" title="Start A Conversation"><i class="icon-comment"></i> comment</div>
</div>

<div class="comment-form" style="display:none;">
<%= form_for [post, post.comments.new] do |f| %>
  <div class="input-append">
    <%= f.text_field :content, class:'span5', id:"appendedInputButton" %>
    <button name="commit" type="submit" value="Create Comment" class="btn btn-warning">
      <i class="icon-comment"></i>
    </button>
  </div>
<% end %>
</div>