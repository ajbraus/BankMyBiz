<div class="span4 offset4">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <div class="field">
    <%= f.label :avatar, "Select Profile Picture" %><br />
    <%= f.file_field :avatar %>
  </div>
  <%= f.submit "Upload", class:"btn btn-success" %>
<% end %>
</div>