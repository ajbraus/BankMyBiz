      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-43004889-1', 'bankmybiz.com');
      ga('send', 'pageview');

    </script>
  </head>
  <body>  
    <%= render partial: "shared/flash_message", flash: flash %> 
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=210271585800372";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
    <div class="container">
      <div class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_path, class:"navbar-brand" do %>
            <%= image_tag "small_logo.jpg" %>
          <% end %>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to 'How it Works', how_path, class:"little" %>
              <% if params[:controller] == "welcome" && params[:action] == "how" %>
                <div class="under text-center"><i class="icon ion-arrow-up-b green"></i></div>
              <% end %>
            </li>
            <% if false %>
            <li>
              <%= link_to 'Proof', testimonials_path, class:"little" %>
              <% if params[:controller] == "welcome" && params[:action] == "testimonials" %>
                <div class="under text-center"><i class="icon ion-arrow-up-b green"></i></div>
              <% end %>
            </li>
            <% end %>
            <li>
              <%= link_to 'Blog', "http://blog.bankmybiz.com", class:"little", target:"_blank" %>
            </li>
          </ul>
          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
              <li>  
                <% if current_user.finished_profile? %>
                  <%= link_to new_purchase_path do %>
                  Buy Matches - <span class='red'>New</span>
                  <% end %>
                <% else %>
                  <%= link_to edit_profile_path(current_user) do %>
                  Buy Matches - <span class='red'>New</span>
                  <% end %>
                <% end %>
                <% if params[:controller] == "purchases" && params[:action] == "new" %>
                  <div class="under text-center"><i class="icon ion-arrow-up-b green"></i></div>
                <% end %>
              </li>
              <li>
                <%= link_to root_path, rel:"tooltip", title:"News Feed", data: {placement: "bottom"} do %>
                  <i class="big-icon icon ion-ios7-chatboxes-outline"></i>
                <% end %>
                <% if params[:controller] == "posts" && params[:action] == "index" %>
                  <div class="under text-center"><i class="icon ion-arrow-up-b green"></i></div>
                <% end %>
              </li>
              <li>
                <% if current_user.finished_profile? %>
                  <%= link_to matches_path, rel:"tooltip", title:"Matches", data: {placement: "bottom"} do %>
                    <i class="big-icon icon ion-ios7-personadd-outline"></i>
                  <% end %>
                <% else %>
                  <%= link_to edit_profile_path(current_user), rel:"tooltip", title:"Matches", data: {placement: "bottom"} do %>
                    <i class="big-icon icon ion-ios7-personadd-outline"></i>
                  <% end %>
                <% end %>
                <% if params[:controller] == "matches" && params[:action] == "index" %>
                  <div class="under text-center"><i class="icon ion-arrow-up-b green"></i></div>
                <% end %>
              </li>
              <li>
                <%= link_to favorites_path, rel:"tooltip", title:"Favorites", data: {placement: "bottom"} do %>
                  <i class="big-icon icon ion-ios7-star-outline"></i>
                <% end %>
                <% if params[:controller] == "favorites" && params[:action] == "index" %>
                  <div class="under text-center"><i class="icon ion-arrow-up-b green"></i></div>
                <% end %>
              </li>
              <li>
                <%= link_to messages_path, rel:"tooltip", title:"Contacts", data: {placement: "bottom"} do %>
                  <% if current_user.unread_messages.any? %>
                    <i class="big-icon icon ion-ios7-email"></i> <span class="message-count"><%= current_user.unread_messages.count %></span> 
                  <% else %>
                    <i class="big-icon icon ion-ios7-email-outline"></i>
                  <% end %>
                <% end %>
                <% if params[:controller] == "messages" && params[:action] == "index" %>
                  <div class="under text-center"><i class="icon ion-arrow-up-b green"></i></div>
                <% end %>
              </li>
              <li>
                <%= link_to user_path(current_user) do %>
                  Me
                <% end %>
                <% if @user.present? && @user == current_user %>
                  <div class="under text-center"><i class="icon ion-arrow-up-b green"></i></div>
                <% end %>
              </li>
              <% if current_user.admin? %>
                <li>
                  <%= link_to users_path do %>
                    <i class="icon-magic"></i>
                  <% end %>
                </li>
              <% end %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle little" data-toggle="dropdown">
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to edit_profile_path(current_user) do %>
                    <i class="icon ion-wrench"></i> Edit Profile
                      <% end %>
                  </li>
                  <li><%= link_to edit_user_registration_path do %>
                    <i class="icon ion-gear-a"></i> Settings
                      <% end %>
                  </li>
                  <% if user_signed_in? %>
                  <li class="divider"></li>
                  <li><%= link_to destroy_user_session_path, method: "delete" do %>
                    <i class="icon ion-log-out"></i> Logout
                      <% end %>
                  </li>
                  <% end %>
                </ul>
              </li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li>
                <a href="/auth/linkedin" class="auth_provider btn btn-linkedin">
                  Login | <i class="icon ion-social-linkedin"></i>
                </a>
              </li>
              <li class="email-signin">
                <%= link_to new_session_path(resource_name), class:"btn-default btn" do %>
                  Login | <i class="ion-ios7-email-outline"></i>
                <% end %>
              </li>
            </ul>
          <% end %>
          </div><!-- /.nav-collapse -->
        </div> <!-- /navbar-header -->
        <%= yield %>
      </div> <!-- CONTAINER -->
      <hr>
      <footer id="footer">
        <ul class="links">
          <li>
            &#169; 2013 BankMyBiz, LLC
          </li>
          <li>
            <a href="mailto:team@bankmybiz.com?subject=I have a question for BankmyBiz.com">Contact Us</a>
          </li>
          <li>
            <%= link_to "Terms & Conditions", terms_path %>
          </li>
          <li>
            <%= link_to "Team", about_path %>
          </li>
          <li>
            <%= link_to "Linkedin", "http://www.linkedin.com/company/bankmybiz-com", target:"_blank" %>
          </li>
          <li>
            <%= link_to "twitter", "https://www.twitter.com/bankmybiz", target:"_blank" %>
          </li>
          <li>
            <a href="https://plus.google.com/111339007136871525117" rel="publisher" target="_blank">Google+</a>
          </li>
          <li>
            <%= link_to "facebook", "https://www.facebook.com/pages/Bankmybiz/451357408284592", target:"_blank" %>
          </li>
        </ul>
      </footer>
    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
    
  </body>
</html>
