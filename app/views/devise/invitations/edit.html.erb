<h2><%= t 'devise.invitations.edit.header' %></h2>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :name, "Full Name* (private)" %>
  <%= f.text_field :name, class:'form-control' %></p>

  <p><%= f.label :org_name, "Organization* (private)" %>
  <%= f.text_field :org_name, class:'form-control' %></p>

  <p><%= f.label :position, "Position*" %>
  <%= f.text_field :position, class:'form-control' %></p>

  <p><%= f.label :password, "Password* (min 6 characters)" %>
  <%= f.password_field :password, class:"form-control" %></p>

  <p><%= f.label :password_confirmation, "Confirm Password*" %>
  <%= f.password_field :password_confirmation, class:"form-control" %></p>

  <%= f.hidden_field :invitation_token %>
  
  <p><%= f.submit t("devise.invitations.edit.submit_button") %></p>
<% end %>
