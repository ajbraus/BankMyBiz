<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Desc</th>
    <th>Location</th>
    <th>Happening on</th>
    <th>Starts at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.desc %></td>
    <td><%= post.location %></td>
    <td><%= post.happening_on %></td>
    <td><%= post.starts_at %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
