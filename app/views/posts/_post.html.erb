<section class="newsfeed-item">
  <div class="pull-left clear-left dollar">
  $
  </div>
  <div class="span4">
    <p>
      <%= post.short_content %>
    </p>
    <div class="pull-right"><%= render partial: "shared/tags", locals: { tags: post.tags }  %></div>
    <p class="pull-right muted small">
      <%= time_ago_in_words(post.created_at) %> ago by <%= link_to "#{post.user.name}", user_path(post.user) %>
    </p>
  </div>
</section>
<% unless params[:action] == "show" %>
  <%= render partial: 'comments/form', locals: { post: @post } %>
<% end %>
<%= render partial: 'comments/comment', collection: post.comments, as: :comment %>
